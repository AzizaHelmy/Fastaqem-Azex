<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.doaa.fastaqem.Main5Activity"
    android:weightSum="1"
    android:background="@drawable/zaker">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#f000"
        android:textSize="25sp"
        android:padding="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:paddingTop="80dp"
        android:id="@+id/rv5"
        android:layout_weight="0.67">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapeadd"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:onClick="AddZaker"
        android:textSize="35sp"
        android:text="+"
        android:textColor="#4a7280"
        android:layout_weight="0.09" />
</LinearLayout>
