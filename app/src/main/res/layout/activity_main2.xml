<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="77dp"
        android:layout_marginTop="77dp"
        app:srcCompat="@drawable/iconawrady"
        android:id="@+id/imageView2" />

    <Button
        android:text="أورادي"
        android:layout_width="wrap_content"
        android:fontFamily="casual"
        android:layout_marginTop="75dp"
        android:textSize="25sp"
        android:textColor="#367084"
        android:onClick="showAwrad"
        android:background="@drawable/buttonshape"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="98dp"
        android:layout_height="77dp"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/iconmahamy"
        android:id="@+id/imageView3"
        android:layout_weight="1" />
    <Button
        android:text="مهامي"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#367084"
        android:onClick="showMahamy"
        android:background="@drawable/buttonshape"
        android:textSize="30sp"
        android:layout_marginTop="35dp"
        android:id="@+id/button2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="98dp"
            android:layout_height="75dp"
            android:layout_marginTop="47dp"
            app:srcCompat="@drawable/iconzakrny"
            android:id="@+id/imageView4"
            android:layout_weight="1"/>
    <Button
        android:text="ذكرني"
        android:textColor="#367084"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showZakerny"
        android:fontFamily="casual"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="45dp"
        android:id="@+id/button3" />
    </LinearLayout>
</LinearLayout>
